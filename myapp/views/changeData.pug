extends navbar

block content
  .container
    form(action="", method="post")
      .card.rounded.border-secondary
        h5.card-header.text-capitalize.bg-danger.text-white
          | Registro Persona Natural
        .card-body
          .row
            .col-sm-6
              .form-group
                label.h6(for='tipo_documento') Tipo Documento
                select#tipoDocumento.form-control(name="tipo_documento" disabled)
                  option(selected) -----
                  option(value='0') CARNET DE EXTRANJERIA
                  option(value='1') DOCUMENTO NACIONAL DE IDENTIDAD
                  option(value='2') PASAPORTE
            .col-sm-6
              .form-group
                label.h6(for='documento_identidad') Documento de Identidad
                input#documentoIdentidad.form-control(type='text' name="documento_identidad" disabled value=usuario.id)
          .row
            .col-sm-6.col-md-3
              .form-group
                label.h6(for='nombres') Nombres
                input#nombres.form-control(type='text' name="nombres" value=usuario.nombre disabled)
            .col-sm-6.col-md-3
              .form-group
                label.h6(for='apellido_paterno') Apellido Paterno
                input#apellidoPaterno.form-control(type='text' name="apellido_paterno" disabled value=usuario.apellido) 
            .col-sm-6.col-md-3
              .form-group
                label.h6(for='apellido_materno') Apellido Materno
                input#apellidoMaterno.form-control(type='text' name="apellido_materno" disabled)
            .col-sm-6.col-md-3
              .form-group
                label.h6(for='genero') G&eacutenero
                select#genero.form-control(name="genero" disabled)
                  option(selected) -----
                  option(value='0') Femenino
                  option(value='1') Masculino
          .row
            .col-sm-6.col-md-3
              .form-group
                label.h6(for='pais') Pa&iacutes
                input#pais.form-control(type='text' name="pais")
            .col-sm-6.col-md-3
              .form-group
                label.h6(for='departamento') Departamento
                  span.text-danger  (*)
                input#departamento.form-control(type='text' name="departamento")
            .col-sm-6.col-md-3
              .form-group
                label.h6(for='provincia') Provincia
                  span.text-danger  (*)
                input#provincia.form-control(type='text' name="provincia")
            .col-sm-6.col-md-3
              .form-group
                label.h6(for='distrito') Distrito
                  span.text-danger  (*)
                input#distrito.form-control(type='text' name="distrito")
          .row
            .col
              .form-group
                label.h6(for='direccion') Direcci&oacuten
                  span.text-danger  (*)
                input#direccion.form-control(type='text' name="direccion")
          .row
            .col-sm-6.col-md-4
              .form-group
                label.h6(for='fecha_nacimiento') Fecha de Nacimiento
                input#fechaNacimiento.form-control(type='date' name="fecha_nacimiento" disabled)
            .col-sm-6.col-md-4
              .form-group
                label.h6(for='telefono_movil') Tel&eacutefono M&oacutevil
                  span.text-danger  (*)
                input#telefonoMovil.form-control(type='number' name="telefono_movil")
            .col-sm-6.col-md-4
              .form-group
                label.h6(for='telefono_fijo') Tel&eacutefono  Fijo
                  span.text-danger  (*)
                input#telefonoFijo.form-control(type='number' name="telefono_fijo")
          .row
            .col-sm-6.col-md-4
              .form-group
                label.h6(for='email') Correo Electr&oacutenico
                input#email.form-control(type='text' name="email" disabled value=usuario.usuario)
            .col-sm-6.col-md-4
              .form-group
                label.h6(for='email2') Correo Electr&oacutenico Alternativo
                  span.text-danger  (*)
                input#email2.form-control(type='email' name="email2")
          .row
            .col-sm-12.col-md-6
              input#carga.btn.btn-outline-primary.float-right.btn-lg.btn-block(type="submit", value="Guardar")
            .col-sm-12.col-md-6
              a.btn.btn-outline-danger.float-right.btn-lg.btn-block(href="/inicio" role="button") Cancelar